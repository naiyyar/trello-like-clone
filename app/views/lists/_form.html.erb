<%= form_with(model: list, html: { data: { controller: 'form-actions' } }) do |form| %>
  <%= form.text_field :name, 
                      class: 'rounded rounded-xl p-2 my-2 bg-gray-200 focus:border-sky-400 cursor-pointer max-w-60 hover:bg-gray-300',
                      placeholder: '+ Add a List',
                      autocomplete: false,
                      data: { action: 'focus->form-actions#showActionButtons'}
  %>
  
  <div class="form-actions hidden" data-form-actions-target="actions">
    <%= form.submit 'Add', class: 'rounded-full bg-sky-500 px-3 py-2 text-sm leading-5 font-semibold text-white hover:bg-sky-700 cursor-pointer' %>
    <%= link_to 'Cancel', 'javascript:void(0)', class: 'rounded-full bg-gray-500 px-3 py-2 text-sm leading-5 font-semibold text-white hover:bg-gray-700 cursor-pointer', data: {action: 'click->form-actions#cancel'} %>
  </div>
<% end %>