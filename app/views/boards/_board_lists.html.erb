<%= turbo_frame_tag "lists_#{current_board.try(:id)}" do %>
  <div class="top-0 left-60 bottom-0 fixed right-0 overflow-x-auto" id="right-section">
    <div data-controller="modal" class="flex w-full p-3 mb-2 bg-gray-200">
      <h3 class="text-black font-semibold" id="board-name"><%=current_board.name%></h3>
      <button
          type="button"
          data-action="click->modal#open"
          class="rounded-md bg-sky-600 px-3 py-2 ml-1 text-xs font-semibold text-white shadow-sm hover:bg-sky-500 cursor-pointer"
          >Edit</button>

      <%= render 'form', board: current_board %>
    </div>
    
    <%= render 'boards/lists', lists: @lists %>
  </div>
<%end%>