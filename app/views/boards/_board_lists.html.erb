<%= turbo_frame_tag "lists_#{current_board.try(:id)}" do %>
  <div class="top-0 left-60 bottom-0 fixed right-0 overflow-x-auto" id="right-section">
    <% if current_board %>
      <div data-controller="modal" class="flex w-full p-3 mb-2 bg-gray-200">
        <h3 class="text-black font-semibold" id="board-name"><%=current_board.try(:name)%></h3>
        <button
            type="button"
            data-action="click->modal#open"
            class="rounded-md bg-gray-400 px-2 py-1 ml-2 text-xs font-semibold text-white shadow-sm hover:bg-gray-500 cursor-pointer"
            >Edit</button>
        <button
            type="button"
            data-action="click->modal#open"
            data-button-type="invitation"
            class="rounded-md bg-orange-400 px-2 py-1 ml-2 text-xs font-semibold text-white shadow-sm hover:bg-orange-500 cursor-pointer"
            >Invite a Member</button>
        <%= render 'board_invitations/form' %>
        <%= render 'form', board: current_board %>
      </div>
    <%end%>
    
    <%= render 'boards/lists', lists: @lists %>
  </div>
<%end%>